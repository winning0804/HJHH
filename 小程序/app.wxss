/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  
} 
page{
  background-color: #E4DADA;
}
.mine-head{
  width:750rpx;
  z-index: 999;
  background-color: #932525;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-bottom: 10rpx;
}
.mine-head-text{
  color:white;
  font-size: 1.3rem;
}
.mine-block{
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-bottom: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid grey;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.mine-block image{
  width: 60rpx;
  height: 60rpx;
}

.bottom-button{
  position: fixed;
  bottom:100rpx;
  left:75rpx;
  background-color: #932525;
  color: white;
  width: 80%;
}
.mine-list{
  background-color: white;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid gray;
}

.mine-list image{
  height: 300rpx;
  width: 300rpx;
}


.list{
  display: flex;
  flex-direction: column;
}

.list-in{
  padding-top: 15rpx;
}

.list-info{
  padding-left: 20rpx;
  padding-bottom: 7rpx;
}

.list-info-name{
  font-size: 1.1rem;
}

.list-info-peo{
  font-size:0.9rem;
}

.list-info-pri{
  font-size: 0.9rem;
  color:#932525;
}

.list-info-date{
  text-align: right;
  font-size: 0.8rem;
  color: rgb(95, 95, 95);
}

.mine-buttons{
  padding-top: 10rpx;
  width:400rpx;
  display: flex;
  flex-direction:row;
  justify-content: space-evenly;
}

.list-button{
  padding:5rpx;
  width:180rpx;
  height: 70rpx;
  line-height: 60rpx;
  background-color: #932525;
  color:white;
  font-size: 0.85rem;
}