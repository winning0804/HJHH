<!--render.wxml-->
<view class="container">
	<view class = "title">
        <view class = "profile_picture">
            <image src="../../images/u19.svg" mode = "aspectFit" class = "img"></image>
        </view>
        <view class = "profile_infors">
            <view class = "infor_name">美少女战士</view>
            <view class = "infor_credit">信誉分： 100分</view>
            <view class = "to_message">
                <image src="../../images/huaban3-white.png" bindtap='tomessage' mode = "aspectFit" class = "img2"></image>
            </view>
        </view>
        <view class = "nav">
            <view  class = "select1" bindtap='tosend_select' style = "text-align: center">可借</view>
            <view  class = "select1" bindtap='sent_select' style = "text-align: center">已借</view>
            <view  class = "select1" bindtap='hide_select' style = "text-align: center">隐藏</view>
        </view>
    </view>
    <view class = "goods">
        <view class = "thegoods" wx:for="{{list.goods1}}" wx:if="{{tosend}}">
            <view class = "goods_detail" >
                <view class = "goods_img">
                    <image class = "images" src="../../images/u8.png" mode="aspectFill" lazy-load="true"></image>
                </view>
                <view class = "goods_name">{{item.name}}</view>
                <view class = "goods_price">￥ {{item.price}}元/日</view>
                <view class = "goods_deposit">押金：￥{{item.deposit}}</view>
            </view>
        </view>
        <view class = "thegoods" wx:for="{{list.goods2}}" wx:if="{{sent}}">
            <view class = "goods_detail" >
                <view class = "goods_img">
                    <image class = "images" src="../../images/u8.png" mode="aspectFill" lazy-load="true"></image>
                </view>
                <view class = "goods_name">{{item.name}}</view>
                <view class = "goods_price">￥ {{item.price}}元/日</view>
                <view class = "goods_deposit">押金：￥{{item.deposit}}</view>
            </view>
        </view>
        <view class = "thegoods" wx:for="{{list.goods3}}" wx:if="{{hide}}">
            <view class = "goods_detail" >
                <view class = "goods_img">
                    <image class = "images" src="../../images/u8.png" mode="aspectFill" lazy-load="true"></image>
                </view>
                <view class = "goods_name">{{item.name}}</view>
                <view class = "goods_price">￥ {{item.price}}元/日</view>
                <view class = "goods_deposit">押金：￥{{item.deposit}}</view>
            </view>
        </view>
    </view>
</view>