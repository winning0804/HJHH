page{
  background: #f0f0f0;
}
.container {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #e0e0e0;
  }
.search_box{
    width: 750rpx;
    height: 160rpx;
    position: fixed;
    top: 0;
    z-index: 1000;
}
.search_box_in{
    width: 100%;
    height: 100rpx;
    background-color: white;
    float: left;
}
.searchcolor{
    background-color: #a6281d;
}
.nav_top{
    width : 750rpx;
    height: 60rpx;
    margin-top:100rpx;
    line-height: 50rpx;
    text-align:center;
    background-color:#ffffff;
    font-size: 14px;
    display: flex;
}
.nav_top_box{
    width: 100rpx;
    height: 60rpx;
}
.nav_top_classify{
    width: 150rpx;
    height: 60rpx;
}
.goods{
    width:100%;
    padding-top: 160rpx;
}
.img_item {
    width: 48%;
    margin: 0 1% 0 1%;
    display: inline-block;
    vertical-align: top;
}
.item_box{
    width: 100%;
    padding: 3%;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
}
.item_info{
    width: 100%;
    padding-left: 10rpx;
    padding-right: 10rpx;
}
.item_info_name{
    min-height: 60rpx;
    font-size: 30rpx;
}
.item_info_price{
    height: 40rpx;
    line-height: 40rpx;
    display: flex;
}
.item_info_rent{
    width: 65%;
    color: red;
    font-size: 28rpx;
}
.item_info_deposit{
    width: 35%;
    font-size: 20rpx;
}
.selected{
    color: #a6281d;
}