page{
  background: #E4DADA;
}

.search_top{
  width : 100%;
  height: 12vh;
  z-index: 9999;
  position: fixed;
  text-align:center;
  background-color: #932525;
}
.search
{
    width:90%;
    height: 7vh;
    margin-top: 2.5vh;
    margin-left: 5%;
    background-color:white;
    border:1rpx solid whitesmoke;
    border-radius: 40rpx;
}
.search input
{
  font-size:27rpx;
}


.message_list {
  background-color: #E4DADA;
  margin-top: 0vh;
  width: 100%;
}
.item{
  margin-top: 0;
  width: 100%;
  height:60px;
  display: flex;
  flex-direction:row;
  background-color: white;
  border-top: 1px solid gray;
}
.borrower_image{
  width:50px;
  height:50px;
  padding: 10rpx;
}

.borrower_text{
  padding-top: 20rpx;
  padding-left: 50rpx;
  width:70%;
}
.borrower_name{
  font-size:15px;
  font-family: bolder;
  color: #932525;
}
.borrower_message{
  padding-top:10px;
  font-size:12px;
}
.item_right {
  padding-top: 13rpx;
  margin-right:4px;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.mark {
  margin-top: 4px;
  background-color: #f74c31;
  width: 35rpx;
  height: 35rpx;
  border-radius: 16rpx;
}
.text{
  float:left;
  font-size: 18rpx;
  color:white;
  margin-top:3px;
  margin-left:4px;
}